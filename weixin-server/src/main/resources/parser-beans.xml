<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="jsonParser" class="com.yanmo.weixin.parser.JsonParser">
        <property name="jsonMaps">
            <map>
                <!--第一个-->
                <entry>
                    <key>
                        <value>com.yanmo.weixin.domain.json.AccessTokenDO</value>
                    </key>
                    <list>
                        <value>access_token</value>
                        <value>expires_in</value>
                    </list>
                </entry>
                <!--第二个-->
                <entry>
                    <key>
                        <value>com.yanmo.weixin.domain.json.JsonErrorDO</value>
                    </key>
                    <list>
                        <value>errcode</value>
                        <value>errmsg</value>
                    </list>
                </entry>

            </map>
        </property>
    </bean>

    <bean id="xmlParser" class="com.yanmo.weixin.parser.XmlParser">
        <property name="xmlMaps">
            <map>
                <!--用户文本消息-->
                <entry>
                    <key>
                        <value>1</value>
                    </key>
                    <list>
                        <value>ToUserName</value>
                        <value>FromUserName</value>
                        <value>CreateTime</value>
                        <value>MsgType</value>
                        <value>Content</value>
                        <value>MsgId</value>
                    </list>
                </entry>
                <!--用户图片消息-->
                <entry>
                    <key>
                        <value>2</value>
                    </key>
                    <list>
                        <value>ToUserName</value>
                        <value>FromUserName</value>
                        <value>CreateTime</value>
                        <value>MsgType</value>
                        <value>PicUrl</value>
                        <value>MediaId</value>
                        <value>MsgId</value>
                    </list>
                </entry>

            </map>
        </property>
    </bean>

</beans>